<% if logged_in? %>

<div class="container">

<div class="button-container">
  <%= link_to user_items_path(@user) do %>
   <button class="btn btn-primary">管理一覧へ</button>
  <% end %>
  <%= link_to new_user_main_category_path(@user) do%>
    <button class="btn btn-primary">カテゴリーを作成する</button>
  <% end %>
</div>

  <div class="row item-list">
      <h2>今週中に無くなるリスト</h2>

        <table>
          <%= render "shared/item_table" %>
          <%= render "shared/feed" %>
        </table>
  </div>
</div>
</div>

<% else %>
<div id="wrap">
<div class="home-top-background">
  <h1 class="not_opacity title">HomeStockManager</h1>
    <p class="not_opacity sub_title">家の在庫を簡単に管理し、日常生活をもっと便利にしましょう!</p>
    <div class="center not_opacity">
      <p class="signup">新規登録は<%= link_to "こちら", signup_path %></p>
      <%= link_to "Log in", login_path, class: "btn btn-lg btn-primary col-3 mx-auto" %>
    </div>
</div>
</div>
<% end %>
