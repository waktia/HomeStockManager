<% if logged_in? %>

  <div>
    <aside class="col-md-4">
      <section class="item_form">
        <%= render "shared/item_form" %>
      </section>
    </aside>
  <h2>管理アイテム一覧</h2>

    <% if @user.items.any? %>
    <div class="col-md-8">
        <table>
          <%= render "shared/item_table" %>
          <%= render "shared/feed" %>
        </table>
    </div>
    <% end %>
  </div>

<% else %>
  <%= render signup_path %>
<% end %>
